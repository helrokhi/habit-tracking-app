<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Elena Yankovskaya"
               id="create-table-notification">
        <createTable schemaName="tracking_habit"
                     tableName="notification"
                     remarks="Оповещения">

            <column name="id"
                    autoIncrement="true"
                    type="BIGINT"
                    remarks="ID оповещения">
                <constraints nullable="false"
                             unique="true"/>
            </column>

            <column name="sent_time"
                    type="timestamp"
                    remarks="Время отправки"/>

            <column name="person_id"
                    type="BIGINT"
                    remarks="Получатель(кому отправлено)"/>

            <column name="habit_id"
                    type="BIGINT"
                    remarks="Привычка"/>

            <column name="contact"
                    type="VARCHAR(50)"
                    remarks="Куда отправлено оповещение (конкретный e-mail или телефон)"/>

            <column name="is_read"
                    type="BOOLEAN"
                    remarks="Отметка о том, что оповещение прочитано"/>

        </createTable>
    </changeSet>

</databaseChangeLog>